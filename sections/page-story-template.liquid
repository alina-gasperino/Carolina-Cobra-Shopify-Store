    <div class="one-half small-down--one-whole relative image-with-text__image">
      <div class="image-with-text__image-size {% unless block.settings.image_size == '0' %}image-with-text__mobile-radius{% endunless %}">
        {% if block.settings.image_link != blank %}<a href="{{ block.settings.image_link }}">{% endif %}
        {% if block.settings.image == blank %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% else %}
          {% render 'responsive-image', image: block.settings.image, nomax: true %}
