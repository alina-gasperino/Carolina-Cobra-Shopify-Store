  {% style %}
    .section-{{ block.id }} .image-with-text {
      background-color: {{ block.settings.color_bg }};
      color: {{ block.settings.color_text }};
    }

    .section-{{ block.id }} .image-with-text__image-size {
      padding: {{ block.settings.image_size }}px;
    }

    {% if block.settings.image_size == '120' %}
      @media screen and (max-width: 1000px) and (min-width: 768px) {
        .section-{{ block.id }} .image-with-text__image-size {
          padding: {{ block.settings.image_size | divided_by: 2 }}px;
        }
      }
      @media screen and (max-width: 580px) {
        .section-{{ block.id }} .image-with-text__image-size {
          padding: {{ block.settings.image_size | divided_by: 2 }}px;
        }
      }
