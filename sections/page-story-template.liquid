<div class="story-page-template" data-section-id="{{ section.id }}" data-section-type="nested-sections">
  <div class="container">
    <div class="page-width">
      <h1 class=" {% unless section.settings.show_title %}visually-hidden{% endunless %} giant-title">{{ page.title }}</h1>
    </div>
    <div class="row reading-width">
      <div class="rte rte--expanded-images">
        {{ page.content }}
      </div>
    </div>
  </div>

  {% for block in section.blocks %}
    {% if block.type == 'rich-text' %}
      <div class="shopify-section section-rich-text" {{ block.shopify_attributes }}>
<section class="relative container container--no-mobile-padding large-row section-{{ block.id }}" data-section-id="{{ block.id }}" data-nested-section-type="rich-text-section">
  {% style %}
    .section-{{ block.id }} .rich-text-section {
      background-color: {{ block.settings.color_bg }};
      color: {{ block.settings.color_text }};
    }
    .section-{{ block.id }} .rich-text-section .large-title {
      color: {{ block.settings.color_title }};
    }
  {% endstyle%}
  <div class="page-width rich-text-section large-section global-border-radius">
    <div class="{% if block.settings.full_width == false %}reading-width{% endif %} text-center">
      {% if block.settings.title != blank %}
        <h2 class="{% if block.settings.enlarge_title %}giant-title {% else %}large-title {% endif %} rich-text-section__title">{{ block.settings.title | escape }}</h2>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="rte {% if block.settings.enlarge_text %}large-text{% endif %}">
          {{ block.settings.text }}
        </div>
      {% endif %}

      {% if block.settings.button_label != blank %}

        {%- assign bg_alpha = block.settings.color_bg | color_extract: 'alpha' -%}
        {%- assign link_inherit_color = false -%}
        {%- if block.settings.url_style == 'link_style' -%}
          {%- if bg_alpha > 0 and block.settings.color_bg != settings.color_body_background -%}
            {%- assign link_inherit_color = true -%}
          {%- endif -%}
        {%- endif -%}

        <div class="rich-text-section__btn-row">
          <a class="{% if block.settings.url_style == 'button_1' %}btn btn--small btn--primary{% elsif block.settings.url_style == 'button_2' %}btn btn--small btn--secondary{% else %}standard-link {% if link_inherit_color == true %}standard-link--inherit-color{% endif %}{% endif %}" href="{{ block.settings.button_link | escape }}">{{ block.settings.button_label | escape }}</a>
        </div>
      {% endif %}

    </div>
  </div>
</section>

</div>

    {% elsif block.type == 'image-with-text' %}
